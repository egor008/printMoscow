@model TeamEditViewModel

@{
	ViewBag.Title = Model.Team.Name;
	Layout = "_AdminLayout";
}

<form asp-action="EditOurTeam" method="post" enctype="multipart/form-data">
	<input type="hidden" asp-for="Team.Id" />
	<div class="form-group">
		<label asp-for="Team.Name">Наименование</label>
		<div><span asp-validation-for="Team.Name" class="text-danger"></span></div>
		<input asp-for="Team.Name" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="Team.Position">Позиция</label>
		<div><span asp-validation-for="Team.Position" class="text-danger"></span></div>
		<input asp-for="Team.Position" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="Team.Description">Описание</label>
		<div><span asp-validation-for="Team.Description" class="text-danger"></span></div>
		<input asp-for="Team.Description" class="form-control" />
	</div>
	<div class="form-group">
		@if (Model.Team.Image == null)
		{
			<div class="form-control-static">Изображение не загружено</div>
		}
		else
		{
			<img class="img-thumbnail" width="150" height="150"
				 src="@Url.Action("GetImageTeam", "Home",
                        new { Model.Team.Id })" />
		}
	</div>
	<div style="display: flex;
    flex-direction: column;">

		<div class="form-group" style="@(Model.Team.Image != null? "display:none" : "display:block")">
			<div class="">
				<p>Загрузить одну фотографию:</p>
				<input type="file" name="TeamImage" multiple>
			</div>
		</div>

	</div>
	<div class="text-center">
		<button class="btn btn-primary" type="submit">Сохранить</button>
		<a asp-action="InformationList" class="btn btn-default">Отменить</a>
	</div>

</form>