@model HomeViewModel

@{
	ViewBag.Title = "PRINT.MOSCOW";
	Layout = "_Layout";
}
<section class="main__work " id="products">
	<div class="wrapper">
		<h1>МЫ ПРОИЗВОДИМ ПОЛИГРАФИЧЕСКУЮ ПРОДУКЦИЮ С 2007 ГОДА</h1>
		<div class="posts">
			<div class="products">
				@foreach (var item in Model.Categories)
				{
					<figure>
                        <a asp-action="List"
                           asp-controller="Product"
                           asp-route-category="@item.Name"
                           asp-route-page="1">
                            @if (item.CategoryImage != null)
                            {
                                <div>
                                    <img class="img-thumbnail" width="160" height="160"
                                         src="@Url.Action("GetImage", "Admin",
                new { item.Id })" />
                                </div>
                            }
                            <figcaption>
                                <span style="display:block">@item.Name</span>
                                <span>от @item.Price руб</span>
                            </figcaption>
                        </a>
					</figure>
				}

			</div>
		</div>
	</div>
</section>
<section class="block__offers">
	<div class="wrapper">
		<h1>ЧТО МЫ ПРЕДЛАГАЕМ?</h1>
		<div class="offers">
			@foreach (var item in Model.Offer)
			{
				<div class="mt30">
					<figure class="offer">

						@if (item.Image != null)
						{
							<img  src="@Url.Action("GetImageOffer", "Admin", new { item.Id })" />
						}						
						<figcaption>
							<h4>@item.Title</h4>
							<span>
								@item.Description
							</span>
						</figcaption>
					</figure>
				</div>
			}
		</div>
	</div>
</section>
<section class="main__services">
	<div class="wrapper">
		<h1>ВИДЫ ПЕЧАТИ</h1>
		<div class="services__cards">
			@foreach (var item in Model.Type)
			{
			<div class="services__card">
				@if (item.Image != null)
				{
					<img src="@Url.Action("GetImageType", "Admin", new { item.Id })" />
				}
				<h4>@item.Title</h4>
				<p>
					@item.Description
				</p>
			</div>
			}
		</div>
	</div>
</section>
<section class="main__team" id="photo">
	<div class="wrapper">
		<h1>НАША КОМАНДА</h1>
		<div class="team__cards">
			@foreach (var item in Model.Team)
			{
			<div class="card ">
				@if (item.Image != null)
				{
					<img class="photo" src="@Url.Action("GetImageTeam", "Admin", new { item.Id })" />
				}
				@*<div class="photo team1"></div>*@
				<h4 class="name">@item.Name</h4>
				<p class="position">@item.Position</p>
				<p class="about__position">
					@item.Description
				</p>
			</div>
			}
			<div class="card">
				<div class="photo team2"></div>
				<h4 class="name">Bogdan Makarov</h4>
				<p class="position">Manager</p>
				<p class="about__position">
					Do not seek to change what has come before. Seek to create that
					which has not.
				</p>
			</div>
			<div class="card">
				<div class="photo team3"></div>
				<h4 class="name">Pavel Konov</h4>
				<p class="position">Copywriter</p>
				<p class="about__position">
					Do not seek to change what has come before. Seek to create that
					which has not.
				</p>
			</div>
		</div>

	</div>
</section>
<section class="contact__form" id="contacts">
	<div class="contact__wrapper">
		<h1 style="text-align:center">
			Свяжитесь с нами, чтобы получить <br>
			дополнительную информацию об услугах студии
		</h1>
		<form id="application" action="application.php" method="POST" name="application">

			<div class="flex">
				<div class="contact__photo"></div>
				<div class="application__form">
					<div class="flex jscont">
						<div class="name__form">
							<div><span>Имя:</span></div>
							<input name="name" id="applicationName" maxlength="20"
								   placeholder="Введите ваше имя" required />
						</div>
						<div class="email__form">
							<div><span>E-mail:</span></div>
							<input name="email" type="email" id="applicationEmail" maxlength="40"
								   placeholder="Введите ваш E-mail" required />
						</div>
					</div>
					<div>
						<div><span>Тема:</span></div>
						<input name="theme" type="text" id="applicationTheme" placeholder="Введите вашу тему"
							   required />
					</div>
					<div>
						<div><span>Телефон:</span></div>
						<input name="telephone" type="Tel" id="applicationPhone"
							   placeholder="Введи номер телефона" required />
					</div>
					<div class="four__form">
						<div><span>Сообщение:</span></div>
						<textarea name="telephone" type="text" id="applicationText"
								  placeholder="Введите ваше сообщение" required
								  style="resize: none;height:100px;"></textarea>
					</div>
				</div>
			</div>
			<button class="applicationButton button5" type="submit" form="application">
				Связаться с нами
			</button>
		</form>
	</div>
</section>
<section class="map">
	<div>
		<script type="text/javascript" charset="utf-8" async
				src="https://api-maps.yandex.ru/services/constructor/1.0/js/?um=constructor%3Aa8a075cd14f719af0cee1d61acf2c33abeb705ee05eac517c9386a1ae7c499d6&amp;width=100%25&amp;height=300&amp;lang=ru_RU&amp;scroll=true">
		</script>
	</div>
</section>
