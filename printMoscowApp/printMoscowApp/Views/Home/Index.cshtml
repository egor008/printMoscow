<section class="contact__form" id="contacts">
	<div class="contact__wrapper">
		<h1 style="text-align:center">
			Свяжитесь с нами, чтобы получить <br>
			дополнительную информацию об услугах студии
		</h1>
		<form id="application" action="application.php" method="POST" name="application">

			<div class="flex">
				<div class="contact__photo"></div>
				<div class="application__form">
					<div class="flex jscont">
						<div class="name__form">
							<div><span>Имя:</span></div>
							<input name="name" id="applicationName" maxlength="20"
								   placeholder="Введите ваше имя" required />
						</div>
						<div class="email__form">
							<div><span>E-mail:</span></div>
							<input name="email" type="email" id="applicationEmail" maxlength="40"
								   placeholder="Введите ваш E-mail" required />
						</div>
					</div>
					<div>
						<div><span>Тема:</span></div>
						<input name="theme" type="text" id="applicationTheme" placeholder="Введите вашу тему"
							   required />
					</div>
					<div>
						<div><span>Телефон:</span></div>
						<input name="telephone" type="Tel" id="applicationPhone"
							   placeholder="Введи номер телефона" required />
					</div>
					<div class="four__form">
						<div><span>Сообщение:</span></div>
						<textarea name="telephone" type="text" id="applicationText"
								  placeholder="Введите ваше сообщение" required
								  style="resize: none;height:100px;"></textarea>
					</div>
				</div>
			</div>
			<button class="applicationButton button5" type="submit" form="application">
				Связаться с нами
			</button>
		</form>
	</div>
</section>
