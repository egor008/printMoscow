<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<link rel="stylesheet" asp-href-include="~/css/*.min.css" />
	<title>@ViewBag.Title</title>
	<style>
		.input-validation-error {
			border-color: red;
			background-color: #fee;
		}
	</style>
	<script asp-src-include="~/js/jquery-3.4.1.min.js"></script>
	<script asp-src-include="~/js/jquery.validate.min.js"></script>
	<script asp-src-include="~/js/jquery.validate.unobtrusive.js"></script>
</head>
<body class="panel panel-default">
	<div class="panel-heading"><h4>@ViewBag.Title</h4></div>
	<div class="panel-body">
		@if (TempData["message"] != null)
		{
			<div class="alert alert-success">@TempData["message"]</div>
		}
		@RenderBody()
	</div>
</body>
</html>
